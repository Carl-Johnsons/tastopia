@page
@model DuendeIdentityServer.Pages.Account.Logout.LoggedOut

<div class="h-100 logged-out-page d-flex flex-column justify-content-center align-items-center">
    <h1>You have logged out.</h1>

    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <div>
            <p>returning to <a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">the website</a>...</p>
        </div>
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
